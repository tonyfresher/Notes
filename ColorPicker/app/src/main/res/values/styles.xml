<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:colorPrimary">@color/white</item>
        <item name="android:colorPrimaryDark">@color/dark</item>
        <item name="android:colorAccent">@color/accent</item>

        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorControlNormal">@color/white</item>
        <item name="android:colorControlActivated">@color/accent</item>
        <item name="android:colorControlHighlight">@color/accent</item>
        <item name="android:textColorHint">@color/accent</item>

        <item name="android:colorButtonNormal">@color/gray</item>
    </style>

    <style name="ColorSquare">
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:layout_margin">18dp</item>
        <item name="android:foreground">@drawable/frame</item>
    </style>

    <style name="ColorRepresentation">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">15dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

</resources>
